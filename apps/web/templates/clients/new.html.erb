<h2>Add Client</h2>
<%=
  form_for :client, '/clients' do
    div class: 'input' do
      label       :name
      text_field  :name
    end

    div class: 'input' do
      label       :description
      text_field  :desc
    end

    div class: 'input' do
      label       :location
      text_field  :location
    end

    div class:'controls' do
      submit 'Create Client'
    end

  end
%>
