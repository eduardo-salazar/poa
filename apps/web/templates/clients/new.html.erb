<h2>Add Client</h2>
<%=
  form_for :client, '/clients' do
    div class: 'input' do
      label       :name
      text_field  :name
    end

    div class: 'input' do
      label       :description
      text_field  :description, name: 'client[desc]'
    end

    div class: 'input' do
      label       :location
      text_field  :location
    end

    div class:'controls' do
      submit 'Create Client'
    end

  end
%>
<% unless params.valid? %>
  <div class="errors">
  <h3>There was a problem with your submission</h3>
  <ul>
    <% params.error_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
